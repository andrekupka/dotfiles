# see https://unix.stackexchange.com/a/25329
alias watch='watch '

alias add-ssh-agent='eval $(ssh-agent) && ssh-add'

alias ls='eza'
alias lsa='eza -a'
alias ll='eza -l --icons --git --group-directories-first'
alias lla='eza -l --icons --git --group-directories-first -a'
alias lt='eza -l --icons --git --group-directories-first --tree --level 2'
alias lta='eza -l --icons --git --group-directories-first --tree --level 2 -a'

alias tf='terraform'
alias tfi='terraform init'
alias tfp='terraform plan'
alias tfa='terraform apply'

# vim: set filetype=zsh
