font:
  normal:
    family: "MesloLGS NF"
  size: {{ .alacritty.fontSize }}

draw_bold_text_with_bright_colors: true

window:
  opacity: 0.9

selection:
  save_to_clipboard: true

colors:
  # Default colors
  primary:
    background: '#1a1a1a'
    foreground: '#eeeeec'

  # Normal colors
  normal:
    black:   '#3e3436'
    red:     '#cc0000'
    green:   '#4e9a06'
    yellow:  '#c4a000'
    blue:    '#3465a4'
    magenta: '#75507b'
    cyan:    '#06989a'
    white:   '#d3d7cf'

  # Bright colors
  bright:
    black:   '#555753'
    red:     '#ef2929'
    green:   '#8ae234'
    yellow:  '#fce94f'
    blue:    '#729fcf'
    magenta: '#ad7fa8'
    cyan:    '#34e2e2'
